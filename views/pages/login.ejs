<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <title>CO2 sensing platform | Sign in</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    
    <!-- Custom styles for this template -->
    <link href="/css/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    
<main class="form-signin">
  <form action="/login" method="POST">
    <img class="mb-4" src="cpu-fill.svg" alt="" width="100" height="100">
    <h1 class="h3 mb-4 fw-normal">Please sign in</h1>
    <label for="inputUsername" class="visually-hidden">Username</label>
    <input type="username" id="inputUsername" name="username" class="form-control mb-3" placeholder="Username" required autofocus>
    <label for="inputPassword" class="visually-hidden">Password</label>
    <input type="password" id="inputPassword" name="password" class="form-control mb-3" placeholder="Password" required>
    
    <% if(locals.errorMessage) { %> 
    <div class="alert alert-danger" role="alert">
    <%=locals.errorMessage%> 
    </div>
    <% } %> 

    <% if(locals.successMessage) { %> 
      <div class="alert alert-success" role="alert">
      <%=locals.successMessage%> 
    </div>
    <% } %> 
    
    <button class="w-100 btn btn-lg btn-primary mb-3" type="submit">Sign in</button>
    <div id="stripe" class="border-top py-2">
    <div id="register" class="border py-2 mt-2">
      New user? <a href="/register" class="text-decoration-none">Create an account</a>
    </div>
  </div>
    <p class="mt-4 text-muted">&copy; CO2 sensing platform 2020-2022</p>
  </form>
</main>


    
  </body>
</html>
