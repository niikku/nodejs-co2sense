<%- include('../partials/header'); %>

  <div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">
                <span data-feather="home" class="mb-1"></span>
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/devices">
                <span data-feather="file" class="mb-1"></span>
                Devices
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Devices</h1>
        </div>

        <a class="btn btn-primary btn-lg mb-4" data-bs-toggle="collapse" href="#addDeviceForm" role="button"
          aria-expanded="false" aria-controls="collapseExample">
          Add device
        </a>

        <div class="collapse" id="addDeviceForm">
          <div class="card card-body col-md-5 mb-4">

              <form action="/addDevice" method="POST">
                <h1 class="h3 mb-4 fw-normal">Add device</h1>
                <label for="inputUsername" class="visually-hidden">Device name</label>
                <input type="text" id="inputUsername" name="devicePublicName" class="form-control mb-3"
                  placeholder="Device name" required autofocus>
                <label for="inputPassword" class="visually-hidden">Device location</label>
                <input type="text" id="inputPassword" name="deviceLocation" class="form-control mb-3"
                  placeholder="Device location" required>
                <button class="w-100 btn btn-lg btn-primary mb-3" type="submit">Add device</button>
                </form>

        </div>
        </div>

        <h4>My Devices</h4>
        <div class="table-responsive">
          <table class="table table-striped table-sm table-hover align-middle">
            <thead>
              <tr>
                <th>Device ID</th>
                <th>Device Name</th>
                <th>Device Location</th>
                <th>Options</th>
              </tr>
            </thead>
            <tbody>
              <% devices.forEach(function(device){ %>
                <tr>
                  <td>
                    <%=device.deviceID%>
                  </td>
                  <td>
                    <%=device.deviceName%>
                  </td>
                  <td>
                    <%=device.deviceLocation%>
                  </td>
                  <td><button type="button" class="btn-sm btn-danger" onclick="setDeviceToRemove('<%= device.deviceID %>')" data-toggle="modal" data-target="#exampleModalCenter">Delete</button></td>
                </tr>
                <% }); %>

            </tbody>
          </table>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
          aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Delete device</h5>
              </div>
              <div class="modal-body">
                Are you sure you want to delete this device? This action cannot be undone.
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" onclick="deleteDevice()">Delete</button>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  <%- include('../partials/footer'); %>
    </body>

    </html>